
<div class="container mt-4">
  <h1>ギフトコード一覧</h1>

  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">新規ユーザー作成</h5>
      <%= form_with model: [:admin, User.new], local: true do |f| %>
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.text_field :name, class: 'form-control', placeholder: 'ユーザー名' %>
          </div>
          <div class="col-md-4">
            <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
          </div>
          <div class="col-md-4">
            <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード' %>
          </div>
          <div class="col-md-4">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'パスワード（確認）' %>
          </div>
          <div class="col-md-4">
            <%= f.submit '作成', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>ユーザー</th>
          <th>金額</th>
          <th>通貨</th>
          <th>ステータス</th>
          <th>作成日時</th>
        </tr>
      </thead>
      <tbody>
        <% @gift_codes.each do |gift_code| %>
          <tr>
            <td><%= gift_code.user.username %></td>
            <td><%= gift_code.amount %></td>
            <td><%= gift_code.currency_code %></td>
            <td><%= gift_code.status %></td>
            <td><%= l gift_code.created_at, format: :long %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
